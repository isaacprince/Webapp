@{
    ViewData["Title"] = "Square Root Calculator";
}

<div class="text-center">
    <h1 class="display-4">Square Root Calculator</h1>
    <p>Calculate and Compare the Square Root of two numbers</p>   
</div>

<div class= "text-center">
    <p>Enter your numbers</p>
    <form asp-controller="Web" asp-action="SquareRoot" method="POST">

        <input type="number"
        asp-action="SquareRoot"
        placeholder= "First Number" 
        asp-controller="Web"
        name = "FirstNumber"/>

        <input type="number"
         placeholder= "Second Number"
         asp-action="SquareRoot"
         asp-controller="Web"
        name = "SecondNumber"/>
          
        <button type = " submit">Calculate</button> 

    </form>    
</div>



@{ if (ViewBag.firstSqrt != null && ViewBag.secondSqrt != null)
    {
        <div class="text-center">
            @{
                if (@ViewBag.firstSqrt > @ViewBag.secondSqrt)
                {
                    <h3 class="text-success">
                        The number @ViewBag.first with square root
                        @ViewBag.firstSqrt has a higher square root
                        than the number @ViewBag.second with
                        square root @ViewBag.secondSqrt
                    </h3>
                }
                else if (@ViewBag.secondSqrt > @ViewBag.first)
                {
                    <h3 class="text-success">
                        The number @ViewBag.second with square root
                        @ViewBag.secondSqrt has a higher square root
                        than the number @ViewBag.first  with
                        square root @ViewBag.firstSqrt
                    </h3>
                }
                else if (@ViewBag.first == @ViewBag.secondSqrt)
                {
                    <h3 class="text-success">
                        The number @ViewBag.first with square root
                        @ViewBag.firstSqrt is equal to the number
                        @ViewBag.second with square root @ViewBag.secondSqrt.
                    </h3>
                    <p class="text-success">Please try a different number!!!</p>
                }

            }
        </div>
    }
}

@{ if (ViewBag.NegNumError != null)
    {
        <div class=" = text-center">
            <h3 class="text-danger">
                @ViewBag.NegNumError
            </h3>
        </div>
    }
}


@{ if (ViewBag.errorMessageEmpty != null)
    {
        <div class=" = text-center">
            <h3 class="text-danger">
                @ViewBag.errorMessageEmpty
            </h3>
        </div>
    }
}


@{ if (ViewBag.alphaError != null)
    {
        <div class=" = text-center">
            <h3 class="text-danger">
                @ViewBag.alphaError
            </h3>
        </div>
    }
}

